# .env.example

# Porta server (default: 3000)
PORT=3000

# Host server (default: 0.0.0.0 per accettare tutte le interfacce)
HOST=0.0.0.0

# Chiave segreta per JWT (cambiala in produzione!)
JWT_SECRET=supersegreto

# Origini autorizzate per CORS (separate da virgola, es: http://localhost:5173,http://127.0.0.1:5173)
CORS_ORIGIN=http://localhost:5173

# Database URL (da configurare con Prisma - esempio PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/tuo_database?schema=public"
